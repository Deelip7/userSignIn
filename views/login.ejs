<form class="form-signin p-5 mt-5 mw-25" method="POST">
  <div class="text-center">
    <a href="/">
      <img class="mb-3" src="/images/logo.jpg" alt="" width="72" height="72" />
    </a>
    <h1 class="h3 mb-3 font-weight-normal">Sign In</h1>
  </div>

  <div class="form-label-group">
    <label for="email">Email address</label>
    <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email" required autofocus />
  </div>

  <div class="form-label-group">
    <label for="password">Password</label>
    <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" required />
  </div>
  <button class="btn btn-primary btn-block" type="submit">Sign in</button>
  <hr />
  <a href="/users/register" class="text-center m-0 p-0 nav-link text-muted">Register </a>
</form>
