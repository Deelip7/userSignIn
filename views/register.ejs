
<form class="form-signin p-5 mt-5 mw-25" method="POST">
  <div class="text-center mb-4">
    <a href="/">
      <img class="mb-4" src="/images/logo.jpg" alt="" width="72" height="72" />
    </a>
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
    <%- include("partials/alertmsg") %>
  </div>
  
  <div class="form-label-group">
    <label for="name">Name</label>
    <input type="name" name="name" id="name" class="form-control" placeholder="Enter Name" value="<%= typeof name != 'undefined'? name: '' %>" required autofocus />
  </div>
  
  <div class="form-label-group">
    <label for="email">Email address</label>
    <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email" value="<%= typeof name != 'undefined'? email: '' %>" required autofocus />
  </div>
  
  <div class="form-label-group">
    <label for="password">Password</label>
    <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" value="<%= typeof name != 'undefined'? password: '' %>" required />
  </div>
  
  <div class="form-label-group">
    <label for="confirm-password">Confirm Password</label>
    <input type="password" id="password2" name="password2" class="form-control" placeholder="Enter Password" value="<%= typeof name != 'undefined'? password2: '' %>" required />
  </div>
  
  <button class="btn btn-primary btn-block" type="submit">Register</button>

  <hr />
  <a href="/users/login" class="text-center m-0 p-0 nav-link text-muted">Sign In </a>
</form>
